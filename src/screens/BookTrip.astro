---
import japanMapImage from "../assets/map.webp"
import { Image } from "astro:assets"
---

<section
  id="booktrip"
  class="w-full py-16 px-8 md:px-24 lg:px-40 min-h-screen relative space-y-14 text-white flex flex-col items-center justify-center"
  style={{
    background: "url(/book_bg.webp)",
    backgroundSize: "cover",
    backgroundRepeat: "no-repeat",
    backgroundPosition: "45% 75%",
  }}
>
  <div class="absolute inset-0 bg-black opacity-30 !mt-0"></div>
  <Image
    src={japanMapImage}
    class="invert lg:w-1/4 w-60"
    alt="japan map outline"
  />
  <p class="lg:text-2xl text-xl uppercase font-medium z-0">
    Explore the wonderfull of
  </p>
  <p class="lg:text-7xl text-5xl uppercase font-semibold z-0">Japan</p>
  <button
    class="text-black bg-white rounded-full py-5 px-10 lg:text-lg z-0 hover:scale-105 active:scale-95 transition"
  >
    Book Trip
  </button>
</section>
