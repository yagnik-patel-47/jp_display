---
interface Props {
  title: string
}

const { title } = Astro.props
import '@fontsource-variable/rubik'
import '@fontsource-variable/cinzel'
import '@fontsource-variable/noto-serif-jp'
import '../global.css'

import Reason1Image from '../assets/reason_1.webp'
import Reason2Image from '../assets/reason_2.webp'
import Reason3Image from '../assets/reason_3.webp'
import Reason4Image from '../assets/reason_4.webp'
import Reason5Image from '../assets/reason_5.webp'

const images = [
  Reason1Image,
  Reason2Image,
  Reason3Image,
  Reason4Image,
  Reason5Image,
]
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {
      images.map((image) => (
        <link rel="preload" href={image.src} as="image" type="image/webp" />
      ))
    }
  </head>
  <body class="font-rubik">
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --foreground-rgb: 0, 0, 0;
    --background-start-rgb: 214, 219, 220;
    --background-end-rgb: 255, 255, 255;
  }
  html.lenis {
    height: auto;
  }

  .lenis.lenis-smooth {
    scroll-behavior: auto;
  }

  .lenis.lenis-smooth [data-lenis-prevent] {
    overscroll-behavior: contain;
  }

  .lenis.lenis-stopped {
    overflow: hidden;
  }

  .lenis.lenis-scrolling iframe {
    pointer-events: none;
  }
  html {
    color-scheme: dark;
    scroll-behavior: smooth;
  }
  body {
    color: rgb(var(--foreground-rgb));
    background: linear-gradient(
        to bottom,
        transparent,
        rgb(var(--background-end-rgb))
      )
      rgb(var(--background-start-rgb));
  }
  .translucent_nav {
    backdrop-filter: blur(10px) saturate(200%) !important;
    -webkit-backdrop-filter: blur(10px) saturate(200%) !important;
    background-color: rgba(24, 26, 27, 0.8) !important;
    padding-top: 1rem !important;
    padding-bottom: 1rem !important;
  }
  .solid_nav {
    backdrop-filter: blur(0) saturate(100%);
    -webkit-backdrop-filter: blur(0) saturate(100%);
    background-color: rgba(24, 26, 27, 0);
    padding-top: 2.5rem;
    padding-bottom: 2.5rem;
  }
</style>
